<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0">
    <title>Resistance Online - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
            <a href="/"><img src="/Images/avalon.png" alt="Resistance Online" width="325" /></a>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Developed by monkeys.</p>
			@if(!User.Identity.IsAuthenticated)
			{
				<p>@Html.ActionLink("Login", "Login", "Account")</p>
			}
			else
			{
				<p>@Html.ActionLink("Logout", "Logout", "Account")</p>
			}			
        </footer>
    </div>

   
    @RenderSection("scripts", required: false)
</body>
</html>